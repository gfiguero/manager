<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>L2planet - {% block title %}{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="{{ path('panel') }}">L2planet</a>
                <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarsExample01" aria-controls="navbarsExample01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse" id="navbarsExample01" style="">
                    <ul class="navbar-nav ml-auto">
                        {% if app.user %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Salir</a></li>
                        {% else %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_forgot_password_request') }}">Restablecer</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}">Registrar</a></li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Ingresar</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <script type="text/javascript">
                        $.notify({
                            message: "{{ message|trans }}"
                        },{
                            type: "{{ label }}",
                            width: 400,
                            animate: {
                                enter: 'animated fadeInRight',
                                exit: 'animated fadeOutRight'
                            },
                            offset: {
                                x: 20,
                                y: 70
                            }
                        });
                    </script>
                {% endfor %}
            {% endfor %}

        {% endblock %}
    </body>
</html>



