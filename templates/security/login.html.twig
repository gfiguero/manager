{% extends 'base.html.twig' %}

{% block title %}Acceso{% endblock %}

{% block body %}
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-sm-8 col-md-6 col-lg-4 col-xl-4 mt-3">
                <form name="login_form" method="post">

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Formulario de ingreso</h1>
                    <div class="form-group"><label for="inputLogin" class="required">Login</label><input type="text" value="{{ last_username }}" id="inputLogin" name="login" required="required" maxlength="45" class="form-control"></div>
                    <div class="form-group"><label for="inputPassword" class="required">Password</label><input type="password" id="inputPassword" name="password" required="required" class="form-control"></div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Ingresar</button>

                </form>


            </div>
        </div>
    </div>
{% endblock %}
