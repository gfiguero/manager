<form method="post" action="{{ path('accounts_delete', {'login': account.login}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ account.login) }}">
    <button class="btn">Delete</button>
</form>
