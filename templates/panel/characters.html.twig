{% extends 'panel/panel.html.twig' %}

{% block panel %}
    <div class="card mt-3">
        <div class="card-header bg-secondary text-white">
            <h2 class="card-title mb-0">Caracteres</h2>
        </div>
        <div class="table-responsive">
            <table class="table m-0">
                <tbody>
                    <thead>
                        <tr class="d-flex">
                            <th class="col-md-3">Nombre</th>
                            <th class="col-md-3">Creación</th>
                            <th class="col-md-4">Vitality</th>
                            <th class="col-md-2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for character in characters %}
                        <tr class="d-flex">
                            <td class="col-md-3">{{ character.charName }}</td>
                            <td class="col-md-3">{{ character.createDate|date("d/m/Y", "America/Santiago") }}</td>
                            <td class="col-md-4"><div class="progress" style="height: 38px;"><div class="progress-bar progress-bar-striped bg-info" style="width: {{ character.vitalityPoints * 100 // 20000 }}%;" role="progressbar" aria-valuenow="{{ character.vitalityPoints * 100 // 20000 }}" aria-valuemin="0" aria-valuemax="100">{{ character.vitalityPoints * 100 // 20000 }}%</div></div></td>
                            <td class="col-md-2 text-right"><a href="#" class="btn btn-primary">Revisar</a></td>
                        </tr>
                        {% else %}
                        <tr class="d-flex">
                            <td class="col">Aún no has creado ningún caracter</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
